[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  ba = branch -a
  fp = format-patch --stdout
  cp = cherry-pick -x
  l  = log --oneline --graph
  ll = log --graph
[push]
  default = simple
[pull]
